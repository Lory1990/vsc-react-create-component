{
	"name": "vsc-react-create-component",
	"displayName": "React Create Component Strucure",
	"description": "Creates folder and files for a react component",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vsc-react-create-component.createFolder"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "React Create Component",
			"properties": {
				"dialect": {
					"type": "string",
					"enum": [
						"typescript",
						"javascript",
						"svelte"
					],
					"enumDescriptions": [
						"Typescript",
						"Javascript",
						"Svelte"
					],
					"description": "Select dialect",
					"default": "typescript"
				},
				"files.createMainFile": {
					"type": "boolean",
					"description": "Create Main file",
					"default": true
				},
				"files.createStory": {
					"type": "boolean",
					"description": "Create Storybook Story file",
					"default": true
				},
				"files.createFormik": {
					"type": "boolean",
					"description": "Create Formik file",
					"default": true
				},
				"styleFiles.createSass": {
					"type": "boolean",
					"description": "Create SASS file",
					"default": false
				},
				"styleFiles.createSassModule": {
					"type": "boolean",
					"description": "Create SASS module file",
					"default": false
				},
				"styleFiles.createLess": {
					"type": "boolean",
					"description": "Create LESS file",
					"default": false
				},
				"styleFiles.createLessModule": {
					"type": "boolean",
					"description": "Create LESS module file",
					"default": false
				},
				"styleFiles.createCss": {
					"type": "boolean",
					"description": "Create CSS file",
					"default": true
				},
				"styleFiles.createCssModule": {
					"type": "boolean",
					"description": "Create CSS module file",
					"default": false
				}
			}
		},
		"commands": [
			{
				"command": "vsc-react-create-component.createFolder",
				"title": "Create React Component Folder",
				"when": "explorerResourceIsFolder"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "vsc-react-create-component.createFolder",
					"alt": "vsc-react-create-component.createFolder",
					"title": "Create React Component Folder",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"@types/fs-extra": "^9.0.11",
		"change-case": "^4.1.2",
		"fs-extra": "^10.0.0",
		"path": "^0.12.7"
	}
}
